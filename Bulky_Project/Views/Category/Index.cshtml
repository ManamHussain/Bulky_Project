@model List<Categories>
<partial name="_Notification" />

<table class="table table-bordered table-striped">
   <div class="container">
       <div class="row pt-4">

            <div class="col-6 pb-3">
               <h2 class="text-primary">
                   Category List
               </h2>
           </div>
           <div class="col-6 text-end">
              <a asp-action="Create" class="btn btn-primary">
                  <i class="bi bi-plus-circle"></i> Create New Category
                </a>
           </div>

       </div>
    <thead class="text-center">
        <td>
            ID
        </td>
        <td>
            Name
        </td>
        <td>
            Display Order
        </td>
        <td>
            Action
        </td>

    </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var obj in Model) {
            <tr>
                <td>
               @obj.CategoryId
            </td>
            <td>
                @obj.Name
            </td>
            <td>
               @obj.OrderDisplay
            </td>
            <td>
            <a asp-action="Edit" class="btn btn-outline-info" asp-route-Id="@obj.CategoryId">Edit</a>
            <a asp-action="Delete" class="btn btn-outline-danger" asp-route-Id="@obj.CategoryId">Delete</a>
            </td>
        
        </tr>
        }
    </tbody>
</table>
